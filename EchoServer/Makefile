ECHOSERVER_FORK = echoserver_fork
ECHOSERVER_FORK_OBJS = $(addsuffix .o, $(ECHOSERVER_FORK))

ECHOCLIENT = echoclient
ECHOCLIENT_OBJS = $(addsuffix .o, $(ECHOCLIENT))

PROGS = $(ECHOSERVER_FORK) $(ECHOCLIENT)
OBJS = $(ECHOSERVER_FORK_OBJS) $(ECHOCLIENT_OBJS)

include ../Make.bin

$(ECHOSERVER_FORK): $(ECHOSERVER_FORK_OBJS)
	$(CC) $(CFLAGS) -o $@ $? $(LIBCERROR_STATIC) $(LIBCWRAPERUNIX_STATIC) $(LIBCNET_STATIC)

$(ECHOCLIENT): $(ECHOCLIENT_OBJS)
	$(CC) $(CFLAGS) -o $@ $? $(LIBCERROR_STATIC) $(LIBCWRAPERUNIX_STATIC) $(LIBCNET_STATIC)
